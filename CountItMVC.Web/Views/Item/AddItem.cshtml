                <span asp-validation-for="FatPerHundredGrams" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProteinPerHundredGrams" class="control-label"></label>
                <input asp-for="ProteinPerHundredGrams" class="form-control" />
                <span asp-validation-for="ProteinPerHundredGrams" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CarbPerHundredGrams" class="control-label"></label>
                <input asp-for="CarbPerHundredGrams" class="form-control" />
                <span asp-validation-for="CarbPerHundredGrams" class="text-danger"></span>
            </div>
            @*<div class="form-group">
                    @Html.DropDownList(Model.AllCategories)
                </div>*@
            <div class="form-group">
                <label asp-for="CategoryId" class="control-label"></label>
                <input asp-for="CategoryId" class="form-control" />
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
